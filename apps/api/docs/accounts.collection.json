{
  "info": {
    "name": "Collector Dashboard Accounts API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Zbirka REST poziva za Accounts modul."
  },
  "item": [
    {
      "name": "List Accounts",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/accounts",
          "host": ["{{baseUrl}}"],
          "path": ["api", "accounts"]
        }
      }
    },
    {
      "name": "Get Account",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/accounts/{{accountId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "accounts", "{{accountId}}"]
        }
      }
    },
    {
      "name": "Create Account",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"New Horizon LLC\",\n  \"type\": \"company\",\n  \"email\": \"hello@newhorizon.example\",\n  \"phone\": \"+1-555-0150\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/accounts",
          "host": ["{{baseUrl}}"],
          "path": ["api", "accounts"]
        }
      }
    },
    {
      "name": "Update Account",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Acme Manufacturing International\",\n  \"type\": \"company\",\n  \"email\": \"contact@acme.example\",\n  \"phone\": \"+1-555-0102\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/accounts/{{accountId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "accounts", "{{accountId}}"]
        }
      }
    },
    {
      "name": "Delete Account",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/accounts/{{accountId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "accounts", "{{accountId}}"]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:4000"
    },
    {
      "key": "accountId",
      "value": "acc_001"
    }
  ]
}

