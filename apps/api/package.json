{
  "name": "api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "lint": "bunx eslint --config ../../packages/config/eslint.config.js \"src/**/*.{ts,tsx}\"",
    "test": "bunx vitest run",
    "test:watch": "bunx vitest",
    "db:generate": "bunx drizzle-kit generate --config drizzle.config.ts",
    "db:push": "bunx drizzle-kit push --config drizzle.config.ts --force",
    "db:studio": "bunx drizzle-kit studio --config drizzle.config.ts",
    "db:migrate": "bun src/db/migrate.ts",
    "db:apply-project-tables": "bun scripts/apply-project-tables.ts",
    "db:seed": "bun src/db/seed/index.ts",
    "db:seed:help": "bun src/db/seed/index.ts --help",
    "db:reset": "bun scripts/migrate-and-seed.ts --drop",
    "db:setup": "bun scripts/migrate-and-seed.ts",
    "db:check-user": "bun scripts/check-user.ts"
  },
  "dependencies": {
    "@crm/types": "workspace:*",
    "@faker-js/faker": "^10.1.0",
    "@fastify/cors": "9.0.1",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^1.10.2",
    "@types/ioredis": "^5.0.0",
    "bcryptjs": "^2.4.3",
    "decimal.js": "^10.6.0",
    "dotenv": "^16.6.1",
    "drizzle-orm": "^0.44.7",
    "fastify": "^4.28.1",
    "fastify-plugin": "^5.1.0",
    "ioredis": "^5.8.2",
    "pg": "^8.16.3",
    "pg-mem": "^3.0.5",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/node": "^24.10.0",
    "@types/pg": "^8.15.6",
    "drizzle-kit": "^0.30.3",
    "pino-pretty": "^10.3.0",
    "vitest": "^2.1.3"
  }
}
