{
  "name": "chat-service",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "lint": "bunx eslint --config ../../packages/config/eslint.config.js \"src/**/*.{ts,tsx}\"",
    "db:generate": "bunx drizzle-kit generate --config drizzle.config.ts",
    "db:push": "bunx drizzle-kit push --config drizzle.config.ts",
    "db:studio": "bunx drizzle-kit studio --config drizzle.config.ts"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@socket.io/redis-adapter": "^8.3.0",
    "dotenv": "^16.6.1",
    "drizzle-orm": "^0.44.7",
    "fastify": "^4.28.1",
    "fastify-plugin": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "redis": "^4.7.0",
    "socket.io": "^4.7.5",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^24.10.0",
    "@types/pg": "^8.15.6",
    "drizzle-kit": "^0.30.3",
    "pino-pretty": "^10.3.0",
    "typescript": "^5.8.3"
  }
}

